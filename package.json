{
  "name": "claude-vscode-assistant",
  "displayName": "Claude AI Assistant",
  "version": "0.1.0",
  "description": "Interact with Claude AI directly from VSCode",
  "publisher": "conscious-robot",
  "repository": {
    "type": "git",
    "url": "https://github.com/conscious-robot/claude-vscode"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "icon": "./logo.png",
  "contributes": {
    "commands": [
      {
        "command": "claude-vscode.askClaude",
        "title": "Ask Claude"
      },
      {
        "command": "claude-vscode.documentCode",
        "title": "Document Code with Claude"
      }
    ],
    "configuration": {
      "title": "Claude VSCode",
      "properties": {
        "claude-vscode.model": {
          "type": "string",
          "default": "claude-3-opus-20240229",
          "description": "The Claude model to use"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run build",
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "node esbuild.js --watch",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0",
    "@vscode/vsce": "^2.24.0"
  },
  "dependencies": {
  }
}